---
const { class: className = "" } = Astro.props;
---

<div
  class={`group relative rounded-2xl border border-zinc-800 bg-zinc-900/40 p-5 transition-all duration-300
    hover:-translate-y-1 hover:scale-[1.01] hover:border-zinc-700
    hover:shadow-[0_20px_50px_-20px_rgba(0,0,0,0.8)]
    ${className}`}
>
  <!-- brilho interno -->
  <div
    class="pointer-events-none absolute inset-0 rounded-2xl opacity-0 transition-opacity duration-300 group-hover:opacity-100"
    style="background: radial-gradient(circle at top left, rgba(255,255,255,0.06), transparent 60%);"
  ></div>

  <slot />
</div>

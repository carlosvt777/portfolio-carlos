---
import Card from "./Card.astro";
const { title, description, tech, href, repo } = Astro.props;
---

<Card>
  <h3 class="text-base font-semibold">{title}</h3>
  <p class="mt-2 text-sm text-zinc-300">{description}</p>

  <div class="mt-3 flex flex-wrap gap-2">
    {tech.map((t) => (
      <span class="rounded-full border border-zinc-800 bg-zinc-950/50 px-2 py-1 text-xs text-zinc-300 transition-colors group-hover:border-zinc-700">
        {t}
      </span>
    ))}
  </div>

  <div class="mt-4 flex gap-3 text-sm">
    {href && <a class="text-zinc-200 hover:text-white" href={href} target="_blank">Demo</a>}
    {repo && <a class="text-zinc-200 hover:text-white" href={repo} target="_blank">Repo</a>}
  </div>
</Card>
